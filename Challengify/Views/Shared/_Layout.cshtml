@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Challengify</title>
    <link rel="icon" href="~/img/icon.svg">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" type="text/css" />
    @RenderSection("Styles", false)
</head>
<body>
    <header class="header container-fluid flex">
        <menu class="flex justify-content-between align-items-center col-12">
            @if (ViewData["Title"] == "Home Page")
            {
                <li class="menu-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
            }
            else
            {
                <li class="menu-item-logo"><a asp-controller="Home" asp-action="Index">Challengify</a></li>
            }
            <li class="menu-item"><a asp-controller="Users" asp-action=@User.Identity.Name>Профиль</a></li>
        </menu>
    </header>
    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
